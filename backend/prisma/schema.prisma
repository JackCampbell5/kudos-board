generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model board {
  id    Int     @id @unique @default(autoincrement())
  title        String
  category     String
  author       String?
  icon         String
  description  String
  cards        card[]
}

model card {
  id          Int     @id @unique @default(autoincrement())
  board       board @relation(fields: [boardId], references: [id])
  boardId     Int
  title       String
  message     String
  author      String?
  icon        String
  upvoteCount Int @default(0)
  pinned      Int @default(0)
}
